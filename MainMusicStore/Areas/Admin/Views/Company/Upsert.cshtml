@model MainMusicStore.Models.DbModels.Company
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Company";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id > 0)
        {
            title = "Edit/Update Company";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-12 pt-3">
            <div class="form-group row">
                <div class="col-12 mt-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-12 mt-2">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 mt-2">
                    <label asp-for="StreetAddress"></label>
                </div>
                <div class="col-12 mt-2">
                    <input asp-for="StreetAddress" class="form-control" />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 mt-2">
                    <label asp-for="City"></label>
                </div>
                <div class="col-12 mt-2">
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 mt-2">
                    <label asp-for="State"></label>
                </div>
                <div class="col-12 mt-2">
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 mt-2">
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div class="col-12 mt-2">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 mt-2">
                    <label asp-for="IsAuthorizedCompany"></label>
                </div>
                <div class="col-12 mt-2">
                    <input type="checkbox" asp-for="IsAuthorizedCompany" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 mt-2 mb-4 btn-sm text-center">
                @if (Model.Id > 0)
                {
                    <partial name="_EditAndBackToListButton" model="Model.Id" />
                }
                else
                {
                    <partial name="_CreateAndBackToListButton" />
                }
            </div>
        </div>
    </div>
</form>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}